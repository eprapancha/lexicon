{
  "name": "@lexicon/editor-cljs",
  "version": "0.1.0",
  "description": "ClojureScript frontend for Lexicon editor",
  "scripts": {
    "setup": "cd ../.. && bb setup-cljs-deps",
    "dev": "npx shadow-cljs watch app",
    "build": "npx shadow-cljs release app",
    "build:dev": "npx shadow-cljs compile app",
    "test": "npx shadow-cljs compile test",
    "test:e2e": "npx playwright test",
    "test:e2e:ui": "npx playwright test --ui",
    "test:e2e:debug": "npx playwright test --debug",
    "dev-server": "node dev-server.js"
  },
  "type": "module",
  "dependencies": {
    "@codemirror/state": "^6.3.3",
    "@codemirror/view": "^6.21.3",
    "codemirror": "^6.0.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "web-tree-sitter": "^0.20.8"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "playwright": "^1.57.0",
    "shadow-cljs": "^2.25.8"
  }
}
