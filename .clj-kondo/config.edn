{:linters
 {;; Disable noisy linters for ClojureScript/re-frame patterns
  :unresolved-symbol {:level :off}  ;; Too many false positives with re-frame
  :unresolved-namespace {:level :off}  ;; CLJS namespaces not always resolved
  :unused-namespace {:level :warning}
  :refer-all {:level :warning}
  :invalid-arity {:level :error}
  :missing-else-branch {:level :warning}
  :redundant-do {:level :warning}
  :redundant-let {:level :warning}
  :unused-binding {:level :warning}
  :unused-private-var {:level :warning}
  :misplaced-docstring {:level :off}  ;; Common in test helpers
  :unused-value {:level :off}}  ;; Docstrings in let blocks

 :lint-as
 {;; re-frame macros - use 'def' not 'defn' since event names are keywords
  re-frame.core/reg-event-db clojure.core/def
  re-frame.core/reg-event-fx clojure.core/def
  re-frame.core/reg-sub clojure.core/def
  re-frame.core/reg-fx clojure.core/def
  re-frame.core/reg-cofx clojure.core/def}

 :output
 {:progress true}}
